{
  "extends": [
    "./packages/lint/base-tslint.json"
  ],
  "rules": {
    "no-empty": false,
    "no-non-null-assertion": false,
    "no-bitwise": false
  },
  "linterOptions": {
    "exclude": [
      "packages/schematics/**/files/**/*",
      "packages/schematics/**/test-cases/misc/**/*",
      "packages/schematics/**/test-cases/v2/**/*",
      "src/app/routes/gen/**/*",
      "packages/**/*.spec.ts",
      "_mock/*"
    ]
  }
}
